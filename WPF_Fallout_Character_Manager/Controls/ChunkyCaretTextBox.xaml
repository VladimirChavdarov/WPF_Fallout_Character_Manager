<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.ChunkyCaretTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:conv="clr-namespace:WPF_Fallout_Character_Manager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <conv:FontSizeToMarginConverter x:Key="FontSizeToMarginConverter"/>
        <conv:FontSizeToPaddingConverter x:Key="FontSizeToPaddingConverter"/>
        <conv:DivideByConverter x:Key="DivideByConverter"/>
    </UserControl.Resources>

    <Grid>
        <TextBox x:Name="CustomTextBox" 
                BorderThickness="0"
                VerticalContentAlignment="Center"
                HorizontalContentAlignment="Left"
                Background="{StaticResource FalloutGreenBackground}"
                Foreground="{StaticResource FalloutGreen}"
                FontFamily="{StaticResource JH_Fallout}"
                FontSize="20" 
                MinWidth="125"
                CaretBrush="Transparent" 
                Padding="5 5 25 5"
                Margin="0"/>
        <Canvas>
            <Border x:Name="Caret" 
                Visibility="Collapsed"
                    
                Height="{Binding ElementName=CustomTextBox, Path=FontSize, Converter={StaticResource DivideByConverter}, ConverterParameter=1.25}" 
                Background="{StaticResource FalloutGreen}">
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Border.Loaded">
                        <BeginStoryboard>
                            <Storyboard  x:Name="CaretStoryBoard" 
                                         RepeatBehavior="Forever">
                                <ColorAnimationUsingKeyFrames 
                                        Storyboard.TargetProperty="Background.Color"
                                        Duration="0:0:0:1"
                                        FillBehavior="HoldEnd">
                                    <ColorAnimationUsingKeyFrames.KeyFrames >
                                        <DiscreteColorKeyFrame KeyTime="0:0:0.750" Value="Transparent" />
                                        <DiscreteColorKeyFrame KeyTime="0:0:0.000" Value="#23ba03"/>
                                    </ColorAnimationUsingKeyFrames.KeyFrames>
                                </ColorAnimationUsingKeyFrames>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
        </Canvas>
    </Grid>
</UserControl>
