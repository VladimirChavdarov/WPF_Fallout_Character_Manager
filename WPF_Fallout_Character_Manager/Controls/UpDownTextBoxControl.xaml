<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.UpDownTextBoxControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid
            Grid.RowSpan="2"
            Grid.Column="{Binding TextBoxSlot, RelativeSource={RelativeSource AncestorType=UserControl}}">
            <controls:EnhancedTextBox x:Name="CustomEnhancedTextBox"
                MaxWidth="{Binding MaxWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                MinWidth="{Binding MinWidth, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Padding="2 3 2 3"
                FontSize="{Binding FontSize, RelativeSource={RelativeSource AncestorType=UserControl}}"
                VerticalAlignment="Center"
                IsReadOnly="{Binding IsReadOnly, RelativeSource={RelativeSource AncestorType=UserControl}}"
                CanOpenModal="{Binding CanOpenModal, RelativeSource={RelativeSource AncestorType=UserControl}}"
                ModInt="{Binding ModInt, RelativeSource={RelativeSource AncestorType=UserControl}}"
                Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </controls:EnhancedTextBox>
        </Grid>

        <RepeatButton
            Grid.Column="{Binding MinusButtonSlot, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Height="Auto"
            Width="22"
            Margin="1 3 1 3"
            Style="{StaticResource FalloutRepeatButton}"
            FontWeight="Regular"
            Content=" - "
            Click="btnSubtract_Click">
        </RepeatButton>

        <RepeatButton
            Grid.Column="{Binding PlusButtonSlot, RelativeSource={RelativeSource AncestorType=UserControl}}"
            Height="Auto"
            Width="22"
            Margin="1 3 1 3"
            Style="{StaticResource FalloutRepeatButton}"
            FontWeight="Regular"
            Content=" + "
            Click="btnAdd_Click">
        </RepeatButton>
    </Grid>
</UserControl>
