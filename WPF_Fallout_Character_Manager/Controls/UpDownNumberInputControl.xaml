<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.UpDownNumberInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.RowSpan="2" Grid.Column="0">
            <controls:ChunkyCaretTextBox
                x:Name="CustomChunkyCaretTextBox"
                MinWidth="36"
                FontSize="11"
                VerticalAlignment="Center"
                Text="{Binding Text, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            </controls:ChunkyCaretTextBox>
        </Grid>

        <RepeatButton
            Grid.Column="1"
            Style="{StaticResource FalloutRepeatButton}"
            FontWeight="Regular"
            Content=" - "
            Click="btnSubtract_Click">
        </RepeatButton>

        <RepeatButton
            Grid.Column="2"
            Style="{StaticResource FalloutRepeatButton}"
            FontWeight="Regular"
            Content=" + "
            Click="btnAdd_Click">
            
        </RepeatButton>

    </Grid>
</UserControl>
