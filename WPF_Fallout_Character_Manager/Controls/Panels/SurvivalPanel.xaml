<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.SurvivalPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d">
    <Grid>
        <GroupBox
    Header="Survival"
    Margin="5"
    Background="Black"
    BorderBrush="#23ba03"
    BorderThickness="1">
            <ScrollViewer>
                <StackPanel Margin="0 5 5 5">
                    <controls:TextBoxWithLabelControl
                        Margin="0 0 0 2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        LabelFontSize="10"
                        LabelText="{Binding SurvivalModel.RadDC.BaseValue.Name}"
                        FontSize="11"
                        IsReadOnly="True"
                        ModInt="{Binding SurvivalModel.RadDC}"
                        Text="{Binding SurvivalModel.RadDC.Total, Mode=OneWay}"
                        Hint="{Binding SurvivalModel.RadDC.BaseValue.Note}"
                        MinWidth="30"/>
                    <Label FontSize="10"/>
                    <controls:TextBoxWithLabelControl
                        Margin="0 0 0 2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        LabelFontSize="10"
                        LabelText="{Binding SurvivalModel.Rads.BaseValue.Name}"
                        FontSize="11"
                        IsReadOnly="True"
                        ModInt="{Binding SurvivalModel.Rads}"
                        Text="{Binding SurvivalModel.Rads.Total, Mode=OneWay}"
                        Hint="{Binding SurvivalModel.Rads.BaseValue.Note}"
                        MinWidth="30"/>
                    <controls:TextBoxWithLabelControl
                        Margin="0 0 0 2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        LabelFontSize="10"
                        LabelText="{Binding SurvivalModel.Hunger.BaseValue.Name}"
                        FontSize="11"
                        IsReadOnly="True"
                        ModInt="{Binding SurvivalModel.Hunger}"
                        Text="{Binding SurvivalModel.Hunger.Total, Mode=OneWay}"
                        Hint="{Binding SurvivalModel.Hunger.BaseValue.Note}"
                        MinWidth="30"/>
                    <controls:TextBoxWithLabelControl
                        Margin="0 0 0 2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        LabelFontSize="10"
                        LabelText="{Binding SurvivalModel.Dehydration.BaseValue.Name}"
                        FontSize="11"
                        IsReadOnly="True"
                        ModInt="{Binding SurvivalModel.Dehydration}"
                        Text="{Binding SurvivalModel.Dehydration.Total, Mode=OneWay}"
                        Hint="{Binding SurvivalModel.Dehydration.BaseValue.Note}"
                        MinWidth="30"/>
                    <controls:TextBoxWithLabelControl
                        Margin="0 0 0 2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        LabelFontSize="10"
                        LabelText="{Binding SurvivalModel.Exhaustion.BaseValue.Name}"
                        FontSize="11"
                        IsReadOnly="True"
                        ModInt="{Binding SurvivalModel.Exhaustion}"
                        Text="{Binding SurvivalModel.Exhaustion.Total, Mode=OneWay}"
                        Hint="{Binding SurvivalModel.Exhaustion.BaseValue.Note}"
                        MinWidth="30"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
