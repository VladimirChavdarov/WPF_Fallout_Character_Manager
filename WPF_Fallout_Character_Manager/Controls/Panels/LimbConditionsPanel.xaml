<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.LimbConditionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="260">
    <Grid>
        <GroupBox
            Header="Limb Conditions"
            Grid.Row="0"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <ScrollViewer>
                <Grid>
                    <Image
                        Margin="0 60 0 0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Width="130"
                        Stretch="Uniform"
                        Source="{Binding VaultBoyImage}"/>
                    <Grid>
                        <controls:ConditionButtonControl
                            FontSize="10"
                            Margin="100 10 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ButtonText="Head"
                            ConditionsAmount="{Binding HeadConditionsCount, Mode=OneWay}"
                            DataContext="{Binding}"/>
                        <controls:ConditionButtonControl
                            FontSize="10"
                            Margin="180 60 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ButtonText="Eyes"
                            ConditionsAmount="{Binding EyesConditionsCount, Mode=OneWay}"/>
                        <controls:ConditionButtonControl
                            FontSize="10"
                            Margin="10 65 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ButtonText="Arms"
                            ConditionsAmount="{Binding ArmsConditionsCount, Mode=OneWay}"/>
                        <controls:ConditionButtonControl
                            FontSize="10"
                            Margin="25 150 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ButtonText="Torso"
                            ConditionsAmount="{Binding TorsoConditionsCount, Mode=OneWay}"/>
                        <controls:ConditionButtonControl
                            FontSize="10"
                            Margin="180 170 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ButtonText="Groin"
                            ConditionsAmount="{Binding GroinConditionsCount, Mode=OneWay}"/>
                        <controls:ConditionButtonControl
                            FontSize="10"
                            Margin="60 245 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            ButtonText="Legs"
                            ConditionsAmount="{Binding LegsConditionsCount, Mode=OneWay}"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
