<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.CataloguePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:control="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="350">
    <GroupBox
        Header="Catalogue"
        Grid.Column="2"
        Margin="5"
        Background="Black"
        BorderBrush="#23ba03"
        BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Horizontal"
                Margin="5"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Left"
                MinWidth="300"
                LabelFontSize="11"
                LabelText="Search"
                CanOpenModal="False"
                IsReadOnly="False"
                Text="{Binding SearchCatalogueText, Mode=TwoWay}"/>

            <ListBox
                Grid.Row="1"
                Style="{StaticResource FalloutInventoryTabsListBox}"
                ItemsSource="{Binding Categories}"
                SelectedItem="{Binding SelectedCatalogueCategory, Mode=TwoWay}"
                Margin="0 0 0 0">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemContainerStyle>
                    <StaticResource ResourceKey="FalloutInventoryTabListBoxItem"/>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock
                            Text="{Binding}"
                            FontSize="12"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Grid
                Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Grid.Column="0"
                    FontSize="11"
                    Content="Name"/>
                <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Grid.Column="1"
                    FontSize="11"
                    Content="Cost"/>
                <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Grid.Column="2"
                    FontSize="11"
                    Content="Load"/>
            </Grid>

            <ListBox
                Grid.Row="3"
                Style="{StaticResource FalloutInventoryTabsListBox}"
                BorderBrush="{StaticResource FalloutGreen}"
                BorderThickness="0 1 0 1"
                Padding="0 5 0 0"
                ItemsSource="{Binding CatalogueView}"
                SelectedItem="{Binding SelectedCatalogueItem}">

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem" BasedOn="{StaticResource FalloutInventoryListBoxItem}">
                        <Setter Property="Tag" Value="{Binding Name.Note}"/>
                        <EventSetter Event="ContextMenuOpening" Handler="ListBoxItem_ContextMenuOpening"/>
                        <Setter Property="ContextMenu">
                            <Setter.Value>
                                <ContextMenu>
                                    <MenuItem Header="Add to Inventory"
                                        Command="{Binding OpenAddToInventoryWindowCommand}"
                                        CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                </ContextMenu>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ListBox.ItemContainerStyle>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Text="{Binding NameString}"
                                FontSize="9"
                                TextWrapping="Wrap"
                                Padding="0 0 10 0"/>
                            <TextBlock
                                Grid.Column="1"
                                Text="{Binding Cost.Total}"
                                FontSize="9"/>
                            <TextBlock
                                Grid.Column="2"
                                Text="{Binding Load.Total}"
                                FontSize="9"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </GroupBox>
</UserControl>
