<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.KarmaCapPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:conv="clr-namespace:WPF_Fallout_Character_Manager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="280" d:DesignWidth="260">

    <UserControl.Resources>
        <conv:KarmaCapCountToSizeConverter x:Key="KarmaCapCountToSizeConverter" MaxSize="180"/>
    </UserControl.Resources>
    
    <Grid>
        <GroupBox
        Header="Karma Caps"
        Margin="5"
        Background="Black"
        BorderBrush="#23ba03"
        BorderThickness="1">
            <ScrollViewer
                HorizontalScrollBarVisibility="Disabled">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition MinHeight="210"/>
                        <RowDefinition MinHeight="30"/>
                    </Grid.RowDefinitions>
                    
                    <ItemsControl
                        Grid.Row="0"
                        HorizontalAlignment="Center"
                        ItemsSource="{Binding BioModel.KarmaCaps}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel
                                    Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>

                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Button
                                    Style="{StaticResource FalloutImageButton}"
                                    Margin="5"
                                    MaxHeight="{Binding DataContext.BioModel.KarmaCaps.Count, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource KarmaCapCountToSizeConverter}}"
                                    MaxWidth="{Binding DataContext.BioModel.KarmaCaps.Count, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource KarmaCapCountToSizeConverter}}"
                                    HorizontalAlignment="Left"
                                    Command="{Binding DataContext.FlipKarmaCapCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}">
                                    <Button.Template>
                                        <ControlTemplate TargetType="Button">
                                            <Border
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                <Image x:Name="CapImage"
                                                    Source="{Binding DataContext.BioModel.KarmaCapFrontImagePath, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    Stretch="Uniform"/>
                                            </Border>

                                            <ControlTemplate.Triggers>

                                                <DataTrigger Binding="{Binding IsActive}" Value="False">
                                                    <Setter TargetName="CapImage"
                                                        Property="Source"
                                                        Value="{Binding DataContext.BioModel.KarmaCapBackImagePath, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                                                </DataTrigger>

                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource FalloutGreenBackground}"/>
                                                </Trigger>

                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="{StaticResource FalloutGreenFaded}"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Button.Template>
                                </Button>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>

                    <Grid
                        Grid.Row="1"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Stretch"
                        Margin="5 0 5 0">
                        <Button
                            Style="{StaticResource FalloutButton}"
                            Content="Add"
                            Padding="5"
                            Width="70"
                            FontSize="9"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Command="{Binding DataContext.AddKarmaCapCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            Content="Remove"
                            Padding="5"
                            Width="70"
                            FontSize="9"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Command="{Binding DataContext.RemoveKarmaCapCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
