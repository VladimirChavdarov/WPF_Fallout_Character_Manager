<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.PerksCataloguesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:control="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:conv="clr-namespace:WPF_Fallout_Character_Manager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox
            Header="Traits Catalogue"
            Grid.Row="0"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <control:TextBoxWithLabelControl
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Margin="5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    MinWidth="300"
                    LabelFontSize="11"
                    LabelText="Search"
                    CanOpenModal="False"
                    IsReadOnly="False"
                    Text="{Binding SearchInventoryText, Mode=TwoWay}"/>

                <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Grid.Row="1"
                    FontSize="11"
                    Content="Name"/>

                <ListBox
                    Grid.Row="3"
                    Style="{StaticResource FalloutInventoryTabsListBox}"
                    BorderBrush="{StaticResource FalloutGreen}"
                    BorderThickness="0 1 0 0"
                    Padding="0 5 0 0"
                    ItemsSource="{Binding FullInventoryView}"
                    SelectedItem="{Binding SelectedInventoryItem}">

                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem" BasedOn="{StaticResource FalloutInventoryListBoxItem}">
                            <Setter Property="Tag" Value="{Binding Name.Note}"/>
                            <EventSetter Event="ContextMenuOpening" Handler="ListBoxItem_ContextMenuOpening"/>
                            <Setter Property="ContextMenu">
                                <Setter.Value>
                                    <ContextMenu>
                                        <MenuItem Header="Delete"
                                            Command="{Binding RemoveFromInventoryCommand}"
                                            CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                        <MenuItem Header="Duplicate Stack"
                                            Command="{Binding DuplicateStackCommand}"
                                            CommandParameter="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                                    </ContextMenu>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>

                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="60"/>
                                    <ColumnDefinition Width="40"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock
                                    Grid.Column="0"
                                    Text="{Binding NameAmount}"
                                    FontSize="9"
                                    TextWrapping="Wrap"
                                    Padding="0 0 10 0"/>
                                <TextBlock
                                    Grid.Column="1"
                                    Text="{Binding TotalCost}"
                                    FontSize="9"/>
                                <TextBlock
                                    Grid.Column="2"
                                    Text="{Binding TotalLoad}"
                                    FontSize="9"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
        </GroupBox>

        <GroupBox
            Header="Perks Catalogue"
            Grid.Row="1"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">

        </GroupBox>
    </Grid>
</UserControl>
