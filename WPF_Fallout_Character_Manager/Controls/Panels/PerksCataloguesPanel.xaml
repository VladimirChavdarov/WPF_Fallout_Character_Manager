<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.PerksPage.PerksCataloguesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels.PerksPage"
             xmlns:control="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:conv="clr-namespace:WPF_Fallout_Character_Manager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="760" d:DesignWidth="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox
            Header="Traits Catalogue"
            Grid.Row="0"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <control:TextBoxWithLabelControl
                    Grid.Column="0"
                    Orientation="Horizontal"
                    Margin="5"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    HorizontalContentAlignment="Left"
                    MinWidth="300"
                    LabelFontSize="11"
                    LabelText="Search"
                    CanOpenModal="False"
                    IsReadOnly="False"
                    Text="{Binding SearchInventoryText, Mode=TwoWay}"/>

                <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Grid.Row="1"
                    FontSize="11"
                    Content="Name"/>

            </Grid>
        </GroupBox>

        <GroupBox
            Header="Perks Catalogue"
            Grid.Row="1"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">

        </GroupBox>
    </Grid>
</UserControl>
