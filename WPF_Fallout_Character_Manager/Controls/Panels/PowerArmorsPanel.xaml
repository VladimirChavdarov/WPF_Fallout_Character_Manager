<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.PowerArmorsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:control="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="238" d:DesignWidth="530">
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="35"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>

                <ComboBox
                    Grid.Column="0"
                    Margin="5"
                    HorizontalAlignment="Left"
                    MinWidth="160"
                    Width="Auto"
                    MaxWidth="410"
                    ItemsSource="{Binding ArmorsModel.PowerArmors}"
                    DisplayMemberPath="EquippedNameAmount"
                    SelectedItem="{Binding SelectedPowerArmor}">
                </ComboBox>

                <StackPanel
                Grid.Column="1"
                Margin="5"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                    <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Content="Equipped:"
                    FontSize="9"
                    VerticalAlignment="Top"/>
                    <CheckBox
                    Style="{StaticResource FalloutSkillCheckbox}"
                    Margin="0 2 0 0"
                    FontSize="18"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    IsChecked="{Binding SelectedPowerArmor.Equipped}"
                    Command="{Binding DataContext.UnequipOtherPowerArmorsCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </StackPanel>
            </Grid>

            <Grid
            Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="165"/>
                    <ColumnDefinition Width="105"/>
                    <ColumnDefinition Width="135"/>
                </Grid.ColumnDefinitions>

                <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Vertical"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="55"
                TextWrapping="NoWrap"
                HorizontalContentAlignment="Left"
                LabelFontSize="11"
                LabelText="AC:"
                IsReadOnly="True"
                ModValue ="{Binding SelectedPowerArmor.AC}"
                Text="{Binding SelectedPowerArmor.AC.Total, Mode=OneWay}"
                Hint="{Binding SelectedPowerArmor.AC.Note}"/>

                <control:TextBoxWithLabelControl
                Grid.Column="1"
                Orientation="Vertical"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="155"
                TextWrapping="NoWrap"
                HorizontalContentAlignment="Left"
                LabelFontSize="11"
                LabelText="Defense Points:"
                IsReadOnly="True"
                ModValue ="{Binding SelectedPowerArmor.DP}"
                Text="{Binding SelectedPowerArmor.DP.Total, Mode=OneWay}"
                Hint="{Binding SelectedPowerArmor.DP.Note}"/>

                <control:TextBoxWithLabelControl
                    Grid.Column="2"
                    Orientation="Vertical"
                    Margin="5"
                    VerticalAlignment="Top"
                    MinWidth="95"
                    TextWrapping="NoWrap"
                    HorizontalContentAlignment="Left"
                    LabelFontSize="11"
                    LabelText="Repair DC:"
                    IsReadOnly="True"
                    ModValue ="{Binding SelectedPowerArmor.RepairDC}"
                    Text="{Binding SelectedPowerArmor.RepairDC.Total, Mode=OneWay}"
                    Hint="{Binding SelectedPowerArmor.RepairDC.Note}"/>

                <control:TextBoxWithLabelControl
                    Grid.Column="3"
                    Orientation="Vertical"
                    Margin="5"
                    VerticalAlignment="Top"
                    MinWidth="125"
                    TextWrapping="NoWrap"
                    HorizontalContentAlignment="Left"
                    LabelFontSize="11"
                    LabelText="Allotted Time:"
                    IsReadOnly="True"
                    ModValue ="{Binding SelectedPowerArmor.AllottedTime}"
                    Text="{Binding SelectedPowerArmor.AllottedTime.Total, Mode=OneWay}"
                    Hint="{Binding SelectedPowerArmor.AllottedTime.Note}"/>
            </Grid>

            <Grid
            Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>

                <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Horizontal"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="45"
                LabelFontSize="11"
                LabelText="Cost:"
                IsReadOnly="True"
                ModValue ="{Binding SelectedPowerArmor.Cost}"
                Text="{Binding SelectedPowerArmor.Cost.Total, Mode=OneWay}"
                Hint="{Binding SelectedPowerArmor.Cost.Note}"/>
            </Grid>

            <Grid
            Grid.Row="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>

                <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Horizontal"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="45"
                LabelFontSize="11"
                LabelText="Load:"
                IsReadOnly="True"
                ModValue ="{Binding SelectedPowerArmor.Load}"
                Text="{Binding SelectedPowerArmor.Load.Total, Mode=OneWay}"
                Hint="{Binding SelectedPowerArmor.Load.Note}"/>
            </Grid>

            <Grid
            Grid.Row="4">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="180"/>
                </Grid.ColumnDefinitions>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="35"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <StackPanel
                    Grid.Row="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center">
                        <Label
                        Style="{StaticResource FalloutDefaultLabel}"
                        FontSize="11"
                        VerticalAlignment="Center"
                        Content="Decay:"/>
                        <control:UpDownTextBoxControl x:Name="Decay"
                        FontSize="11"
                        MinusButtonSlot="0"
                        PlusButtonSlot="2"
                        TextBoxSlot="1"
                        MinValue="0"
                        MaxValue="10"
                        IsReadOnly="{Binding SelectedPowerArmor.Decay.IsBaseValueReadOnly}"
                        ModValue="{Binding SelectedPowerArmor.Decay}"
                        Text="{Binding SelectedPowerArmor.Decay.BaseValue}"
                        Hint="{Binding SelectedPowerArmor.Decay.Note}"
                        CanOpenModal="False"/>
                    </StackPanel>
                </Grid>

                <StackPanel
                Grid.Column="2"
                Margin="5"
                HorizontalAlignment="Right">
                    <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Content="{Binding SelectedPowerArmor.UpgradeSlotVisualization}"
                    FontSize="9"
                    VerticalAlignment="Top"/>
                    <ComboBox
                    Grid.Column="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    MinWidth="130"
                    ItemsSource="{Binding SelectedPowerArmor.Upgrades}"
                    DisplayMemberPath="Name"
                    Tag="Upgrades"
                    SelectionChanged="ComboBox_SelectionChanged">
                        <ComboBox.ItemContainerStyle>
                            <Style TargetType="ComboBoxItem" BasedOn="{StaticResource {x:Type ComboBoxItem}}">
                                <Setter Property="Tag" Value="{Binding Note}"/>
                            </Style>
                        </ComboBox.ItemContainerStyle>
                    </ComboBox>
                </StackPanel>
            </Grid>
        </Grid>
    </ScrollViewer>
</UserControl>
