<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.EquippablePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:panel="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="310" d:DesignWidth="562">
    <Grid>
        <GroupBox
            Header="Equipped Items"
            Grid.Row="1"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">

            <TabControl
                Style="{StaticResource FalloutEquippableTabControl}"
                Margin="5"
                FontSize="10">
                <TabItem Header="Weapons">
                    <ScrollViewer>
                        <panel:WeponsPanel
                            DataContext="{Binding WeaponsViewModel}"/>
                    </ScrollViewer>
                </TabItem>

                <TabItem Header="Armor">

                </TabItem>
            </TabControl>
            
        </GroupBox>
    </Grid>
</UserControl>
