<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.SkillsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d">
    <Grid>
        <GroupBox
            Header="Skills"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <ScrollViewer>
                <StackPanel Margin="0 5 5 5">
                    <controls:TextBoxWithLabelAndCheckboxControl
                        Margin="0 0 0 5"
                        FlowDirection="RightToLeft"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        LabelFontSize="15"
                        LabelText="{Binding SkillModel.Barter.Name}"
                        FontSize="15"
                        CheckboxSize="20"
                        MinWidth="40"
                        IsReadOnly="True"
                        ModIntSkill="{Binding SkillModel.Barter}"
                        SkillViewModel="{Binding}"
                        SkillKey="Barter"
                        Text="{Binding SkillModel.Barter.Total, Mode=OneWay}"/>
                    <controls:TextBoxWithLabelAndCheckboxControl
                        Margin="0 0 0 5"
                        FlowDirection="RightToLeft"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        LabelFontSize="15"
                        LabelText="{Binding SkillModel.Breach.Name}"
                        FontSize="15"
                        CheckboxSize="20"
                        MinWidth="40"
                        IsReadOnly="True"
                        ModIntSkill="{Binding SkillModel.Breach}"
                        SkillViewModel="{Binding}"
                        SkillKey="Breach"
                        Text="{Binding SkillModel.Breach.Total, Mode=OneWay}"/>
