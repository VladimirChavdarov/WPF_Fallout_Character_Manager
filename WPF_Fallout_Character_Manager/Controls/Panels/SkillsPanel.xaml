                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        LabelFontSize="15"
                        LabelText="{Binding SkillModel.Guns.Name}"
                        FontSize="15"
                        CheckboxSize="20"
                        MinWidth="40"
