                        Margin="0 0 0 5"
                        FlowDirection="RightToLeft"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        LabelFontSize="15"
                        LabelText="{Binding SkillModel.Crafting.Name}"
                        FontSize="15"
                        CheckboxSize="20"
                        MinWidth="40"
                        IsReadOnly="True"
                        ModIntSkill="{Binding SkillModel.Crafting}"
                        SkillViewModel="{Binding}"
                        SkillKey="Crafting"
                        Text="{Binding SkillModel.Crafting.Total, Mode=OneWay}"/>
