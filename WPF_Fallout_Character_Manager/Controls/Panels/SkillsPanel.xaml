                        Margin="0 0 0 5"
                        FlowDirection="RightToLeft"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        LabelFontSize="15"
                        LabelText="{Binding SkillModel.EnergyWeapons.Name}"
                        FontSize="15"
                        CheckboxSize="20"
                        MinWidth="40"
                        IsReadOnly="True"
                        ModIntSkill="{Binding SkillModel.EnergyWeapons}"
                        SkillViewModel="{Binding}"
                        SkillKey="EnergyWeapons"
                        Text="{Binding SkillModel.EnergyWeapons.Total, Mode=OneWay}"/>
                    <controls:TextBoxWithLabelAndCheckboxControl
                        Margin="0 0 0 5"
                        FlowDirection="RightToLeft"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        LabelFontSize="15"
                        LabelText="{Binding SkillModel.Explosives.Name}"
                        FontSize="15"
                        CheckboxSize="20"
                        MinWidth="40"
