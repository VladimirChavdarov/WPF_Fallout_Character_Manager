<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.SmallBioPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="800">
    <Grid>
        <GroupBox
    Header="Short Bio"
    Margin="5"
    Background="Black"
    BorderBrush="#23ba03"
    BorderThickness="1">
            <ScrollViewer>
                <StackPanel Margin="0 5 5 5">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label
                    Grid.Column="0"
                    Style="{StaticResource FalloutDefaultLabel}"
                    FontSize="10"
                    VerticalAlignment="Center">
                            Name:
                        </Label>
                        <controls:ChunkyCaretTextBox
                    Grid.Column="1"
                    MinWidth="140"
                    FontSize="11"
                    VerticalAlignment="Center"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label
                    Grid.Column="0"
                    Style="{StaticResource FalloutDefaultLabel}"
                    FontSize="10"
                    VerticalAlignment="Center">
                            Race:
                        </Label>
                        <controls:ChunkyCaretTextBox
                Grid.Column="1"
                MinWidth="142"
                FontSize="11"
                VerticalAlignment="Center"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label
                    Grid.Column="0"
                    Style="{StaticResource FalloutDefaultLabel}"
                    FontSize="10"
                    VerticalAlignment="Center">
                            Background:
                        </Label>
                        <controls:ChunkyCaretTextBox
                    Grid.Column="1"
                    MinWidth="92"
                    FontSize="11"
                    VerticalAlignment="Center"/>
                    </Grid>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label
                        Grid.Column="0"
                        Style="{StaticResource FalloutDefaultLabel}"
                        FontSize="10"
                        VerticalAlignment="Center">
                                Level:
                            </Label>
                            <controls:ChunkyCaretTextBox
                        Grid.Column="1"
                        MinWidth="30"
                        FontSize="11"
                        VerticalAlignment="Center"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Label
                        Grid.Column="0"
                        Style="{StaticResource FalloutDefaultLabel}"
                        FontSize="10"
                        VerticalAlignment="Center">
                                XP:
                            </Label>
                            <controls:ChunkyCaretTextBox
                        Grid.Column="1"
                        MinWidth="74"
                        FontSize="11"
                        VerticalAlignment="Center"/>
                        </Grid>
                    </Grid>

                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
