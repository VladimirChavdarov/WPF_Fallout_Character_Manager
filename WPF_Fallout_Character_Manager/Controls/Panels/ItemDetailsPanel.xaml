<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.ItemDetailsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:control="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:xtrnl="clr-namespace:WPF_Fallout_Character_Manager.Models.External"
             xmlns:inventory="clr-namespace:WPF_Fallout_Character_Manager.Models.External.Inventory"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <DataTemplate x:Key="BaseItemTemplate">
            <StackPanel
                Margin="8">
                <control:EnhancedTextBox
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Padding="2, 3"
                    FontSize="15"
                    IsReadOnly="{Binding Name.IsBaseValueReadOnly}"
                    Text="{Binding Name.Total, Mode=OneWay}"
                    Hint="{Binding Name.Note}"
                    ModValue="{Binding Name}"/>

                <Grid
                    Margin="0 10 0 0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <control:TextBoxWithLabelControl
                        Grid.Column="0"
                        HorizontalAlignment="Left"
                        Orientation="Horizontal"
                        LabelFontSize="11"
                        IsReadOnly="{Binding Amount.IsBaseValueReadOnly}"
                        LabelText="{Binding Amount.Name}"
                        Text="{Binding Amount.Total, Mode=OneWay}"
                        Hint="{Binding Amount.Note}"
                        ModValue="{Binding Amount}"/>

                    <control:TextBoxWithLabelControl
                        Grid.Column="1"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        LabelFontSize="11"
                        IsReadOnly="{Binding Cost.IsBaseValueReadOnly}"
                        LabelText="{Binding Cost.Name}"
                        Text="{Binding Cost.Total, Mode=OneWay}"
                        Hint="{Binding Cost.Note}"
                        ModValue="{Binding Cost}"/>

                    <control:TextBoxWithLabelControl
                        Grid.Column="2"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal"
                        LabelFontSize="11"
                        IsReadOnly="{Binding Load.IsBaseValueReadOnly}"
                        LabelText="{Binding Load.Name}"
                        Text="{Binding Load.Total, Mode=OneWay}"
                        Hint="{Binding Load.Note}"
                        ModValue="{Binding Load}"/>
                </Grid>

                <ContentControl x:Name="DerivedContent"
                    Content="{Binding}"/>
            </StackPanel>
        </DataTemplate>

        <DataTemplate DataType="{x:Type xtrnl:Weapon}">
            <ContentControl Content="{Binding}"
                    ContentTemplate="{StaticResource BaseItemTemplate}">
                <ContentControl.Resources>

                    <DataTemplate DataType="{x:Type xtrnl:Weapon}">
                        <StackPanel Margin="8">

                        </StackPanel>
                    </DataTemplate>

                </ContentControl.Resources>
            </ContentControl>
        </DataTemplate>

    </UserControl.Resources>
    
    <GroupBox
        Header="Item Information"
        Margin="5"
        Background="Black"
        BorderBrush="#23ba03"
        BorderThickness="1">
        <ScrollViewer>
            <Grid>
                <ContentControl Content="{Binding SelectedItem}"/>
            </Grid>
        </ScrollViewer>
    </GroupBox>
</UserControl>
