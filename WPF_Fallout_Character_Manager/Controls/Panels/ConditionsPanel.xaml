<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.ConditionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="380" d:DesignWidth="260">
    <Grid>
        <GroupBox
            Header="Conditions"
            Grid.Row="0"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <ScrollViewer>
                <StackPanel Margin="5">
                    <ListView
                        ItemsSource="{Binding ConditionsModel.Conditions}"
                        Background="Black"
                        BorderBrush="{StaticResource FalloutGreen}"
                        BorderThickness="0 0 0 1"
                        Height="330"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <controls:ConditionItemControl
                                    Margin="0 0 0 12"
                                    FontSize="10"
                                    Condition="{Binding}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListView>

                    <Button
                        Style="{StaticResource FalloutButton}"
                        Content="Add"
                        Margin="5 10 0 5"
                        Padding="5"
                        Width="60"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Command="{Binding DataContext.OpenConditionsModalWindowCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
