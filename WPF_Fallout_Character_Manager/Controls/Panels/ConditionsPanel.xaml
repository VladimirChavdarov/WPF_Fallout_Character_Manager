<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.ConditionsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             mc:Ignorable="d" 
             d:DesignHeight="320" d:DesignWidth="260">
    <Grid>
        <GroupBox
            Header="Conditions"
            Grid.Row="0"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <ScrollViewer>
                <Grid>
                    <Image
                        Margin="0 40 0 0"
                        VerticalAlignment="Top"
                        HorizontalAlignment="Center"
                        Width="130"
                        Stretch="Uniform"
                        Source="/Resources/vault_boy_thumbsup.png"/>
                    <Grid>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            FontFamily="{StaticResource JH_Fallout}"
                            FontSize="10"
                            Content="Head"
                            Margin="100 10 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"/>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            FontFamily="{StaticResource JH_Fallout}"
                            FontSize="10"
                            Content="Eyes"
                            Margin="180 60 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"/>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            FontFamily="{StaticResource JH_Fallout}"
                            FontSize="10"
                            Content="Arms"
                            Margin="10 65 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"/>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            FontFamily="{StaticResource JH_Fallout}"
                            FontSize="10"
                            Content="Torso"
                            Margin="25 150 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"/>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            FontFamily="{StaticResource JH_Fallout}"
                            FontSize="10"
                            Content="Groin"
                            Margin="180 170 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"/>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            FontFamily="{StaticResource JH_Fallout}"
                            FontSize="10"
                            Content="Legs"
                            Margin="100 245 0 0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
