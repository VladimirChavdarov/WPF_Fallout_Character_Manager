<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.WeponsPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:control="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="238" d:DesignWidth="530">
    <Grid
        >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            
            <ComboBox
                Grid.Column="0"
                Margin="5"
                HorizontalAlignment="Left"
                MinWidth="160"
                Width="Auto"
                ItemsSource="{Binding WeaponsModel.Weapons}">
            </ComboBox>

            <StackPanel
                Grid.Column="1"
                Margin="5"
                Orientation="Horizontal"
                HorizontalAlignment="Right">
                <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Content="Equipped:"
                    FontSize="9"
                    VerticalAlignment="Top"/>
                <CheckBox
                    Style="{StaticResource FalloutSkillCheckbox}"
                    Margin="0 2 0 0"
                    FontSize="18"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"/>
            </StackPanel>

        </Grid>

        <Grid
            
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="65"/>
                <ColumnDefinition Width="85"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="90"/>
                <ColumnDefinition Width="90"/>
            </Grid.ColumnDefinitions>

            <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Vertical"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="55"
                TextWrapping="NoWrap"
                HorizontalContentAlignment="Left"
                LabelFontSize="11"
                LabelText="AP:"/>

            <control:TextBoxWithLabelControl
                Grid.Column="1"
                Orientation="Vertical"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="75"
                TextWrapping="NoWrap"
                HorizontalContentAlignment="Left"
                LabelFontSize="11"
                LabelText="To Hit:"/>

            <control:TextBoxWithLabelControl
                Grid.Column="2"
                Orientation="Vertical"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="190"
                TextWrapping="NoWrap"
                HorizontalContentAlignment="Left"
                LabelFontSize="11"
                LabelText="Damage:"/>

            <control:TextBoxWithLabelControl
                Grid.Column="3"
                Orientation="Vertical"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="80"
                TextWrapping="NoWrap"
                HorizontalContentAlignment="Left"
                LabelFontSize="11"
                LabelText="Crit:"/>

            <control:TextBoxWithLabelControl
                Grid.Column="4"
                Orientation="Vertical"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="80"
                TextWrapping="NoWrap"
                HorizontalContentAlignment="Left"
                LabelFontSize="11"
                LabelText="Range:"/>

        </Grid>

        <Grid
            Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>

            <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Horizontal"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="45"
                LabelFontSize="11"
                LabelText="Cost:"/>

            <StackPanel
                Grid.Column="1"
                Margin="5"
                Orientation="Horizontal">
                <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Content="Ammo:"
                    FontSize="11"
                    VerticalAlignment="Top"/>
                <ComboBox
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    MinWidth="130"
                    Width="Auto"
                    ItemsSource="{Binding SelectedWeapon.AvailableAmmos}">
                </ComboBox>
            </StackPanel>

        </Grid>

        <Grid
            Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>

            <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Horizontal"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="45"
                LabelFontSize="11"
                LabelText="Load:"/>

            <Grid
                Grid.Column="1"
                Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label
                    Grid.Column="0"
                    Style="{StaticResource FalloutDefaultLabel}"
                    Content="Magazine"
                    FontSize="9"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"/>
                <StackPanel
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
                    <Button
                        Style="{StaticResource FalloutButton}"
                        Content="Shoot"
                        Padding="5"
                        Margin="0 0 5 0"
                        VerticalAlignment="center"/>
                    <Button
                        Style="{StaticResource FalloutButton}"
                        Content="Reload"
                        Padding="5"
                        VerticalAlignment="center"/>
                </StackPanel>
            </Grid>

            <ComboBox
                Grid.Column="2"
                Margin="5"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                MinWidth="130"
                Width="Auto"
                ItemsSource="{Binding SelectedWeapon.AvailableAmmos}">
            </ComboBox>
        </Grid>

        <Grid
            Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>

            <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Horizontal"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="45"
                LabelFontSize="11"
                LabelText="STR Req:"/>

            <!-- Bullets -->
            <Grid
                Grid.Column="1"
                Height="70">

            </Grid>
        </Grid>

        <!-- Upgrades -->
        <Grid
            Grid.Row="4"
            Grid.Column="2"
            Grid.RowSpan="2">
            <StackPanel
                Margin="5"
                HorizontalAlignment="Right">
                <Label
                    Style="{StaticResource FalloutDefaultLabel}"
                    Content="3/6 slots"
                    FontSize="9"
                    VerticalAlignment="Top"/>
                <ComboBox
                    Grid.Column="2"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Right"
                    MinWidth="130"
                    Width="Auto"
                    ItemsSource="{Binding SelectedWeapon.AvailableAmmos}"/>
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="180"/>
            </Grid.ColumnDefinitions>

            <control:TextBoxWithLabelControl
                Grid.Column="0"
                Orientation="Horizontal"
                Margin="5"
                VerticalAlignment="Top"
                MinWidth="45"
                LabelFontSize="11"
                LabelText="Decay:"/>
        </Grid>
    </Grid>
</UserControl>
