<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.SPECIALPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" >
    <Grid>
        <GroupBox
            Header="S.P.E.C.I.A.L. | Stats"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <ScrollViewer>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <controls:SPECIALInputControl
                            Grid.Column="0"
                            Margin="5"
                            StatLabel="Strength"
                            PrimaryStat="{Binding IntegerValues[Strength]}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="1"
                            Margin="5"
                            StatLabel="Perception"
                            PrimaryStat="{Binding SPECIALModel.Perception}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="2"
                            Margin="5"
                            StatLabel="Endurance"
                            PrimaryStat="{Binding SPECIALModel.Endurance}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="3"
                            Margin="5"
                            StatLabel="Charisma"
                            PrimaryStat="{Binding SPECIALModel.Charisma}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="4"
                            Margin="5"
                            StatLabel="Intelligence"
                            PrimaryStat="{Binding SPECIALModel.Intelligence}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="5"
                            Margin="5"
                            StatLabel="Agility"
                            PrimaryStat="{Binding SPECIALModel.Agility}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="6"
                            Margin="5"
                            StatLabel="Luck"
                            PrimaryStat="{Binding SPECIALModel.Luck}"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
