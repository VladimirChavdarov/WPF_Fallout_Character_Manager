<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.SPECIALPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:cvrt="clr-namespace:WPF_Fallout_Character_Manager.Converters"
             mc:Ignorable="d" >
    <UserControl.Resources>
        <cvrt:IntToStringConverter x:Key="IntToStringConverter"/>
    </UserControl.Resources>
    
    <Grid>
        <GroupBox
            Header="S.P.E.C.I.A.L. | Stats"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <ScrollViewer>
                <Grid Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Column="0"
                            >
                            <controls:SPECIALInputControl
                                Margin="5"
                                StatLabel="{Binding SPECIALModel.Strength.Name}"
                                PrimaryStat="{Binding SPECIALModel.Strength.Total, Mode=OneWay}"/>
                            <TextBox
                                Margin="0 15 0 0 "
                                Text="{Binding SPECIALModel.Strength.BaseValue, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel
                            Grid.Column="1">
                            <controls:SPECIALInputControl
                                Margin="5"
                                StatLabel="{Binding SPECIALModel.Perception.Name}"
                                PrimaryStat="{Binding SPECIALModel.Perception.Total, Mode=OneWay}"/>
                            <TextBox
                                Margin="0 15 0 0 "
                                Text="{Binding SPECIALModel.Perception.BaseValue, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <StackPanel
                            Grid.Column="2">
                            <controls:SPECIALInputControl
                                Margin="5"
                                StatLabel="{Binding SPECIALModel.Endurance.Name}"
                                PrimaryStat="{Binding SPECIALModel.Endurance.Total, Mode=OneWay}"/>
                            <TextBox
                                Margin="0 15 0 0 "
                                Text="{Binding SPECIALModel.Endurance.BaseValue, UpdateSourceTrigger=PropertyChanged}"/>
                        </StackPanel>
                        <controls:SPECIALInputControl
                            Grid.Column="3"
                            Margin="5"
                            StatLabel="{Binding SPECIALModel.Charisma.Name}"
                            PrimaryStat="{Binding SPECIALModel.Charisma.BaseValue}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="4"
                            Margin="5"
                            StatLabel="{Binding SPECIALModel.Intelligence.Name}"
                            PrimaryStat="{Binding SPECIALModel.Intelligence.BaseValue}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="5"
                            Margin="5"
                            StatLabel="{Binding SPECIALModel.Agility.Name}"
                            PrimaryStat="{Binding SPECIALModel.Agility.BaseValue}"/>
                        <controls:SPECIALInputControl
                            Grid.Column="6"
                            Margin="5"
                            StatLabel="{Binding SPECIALModel.Luck.Name}"
                            PrimaryStat="{Binding SPECIALModel.Luck.BaseValue}"/>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
