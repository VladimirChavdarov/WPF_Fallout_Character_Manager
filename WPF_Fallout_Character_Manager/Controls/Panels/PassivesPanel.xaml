<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.PassivesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" >
    <Grid>
        <GroupBox
            Header="Passives"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <ScrollViewer>
                <StackPanel Margin="0 5 5 5">
                    <controls:TextBoxWithLabelControl
                        Margin="0 0 0 2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        LabelFontSize="10"
                        LabelText="{Binding SurvivalModel.PassiveSense.Name}"
                        FontSize="11"
                        IsReadOnly="True"
                        ModInt="{Binding SurvivalModel.PassiveSense}"
                        Text="{Binding SurvivalModel.PassiveSense.Total, Mode=OneWay}"
                        Hint="{Binding SurvivalModel.PassiveSense.Note}"
                        MinWidth="30"/>
                    <controls:TextBoxWithLabelControl
                        Margin="0 0 0 2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        LabelFontSize="10"
                        LabelText="{Binding SurvivalModel.PartyNerve.Name}"
                        FontSize="11"
                        IsReadOnly="True"
                        ModInt="{Binding SurvivalModel.PartyNerve}"
                        Text="{Binding SurvivalModel.PartyNerve.Total, Mode=OneWay}"
                        Hint="{Binding SurvivalModel.PartyNerve.Note}"
                        MinWidth="30"/>
                    <controls:TextBoxWithLabelControl
                        Margin="0 0 0 2"
                        Orientation="Horizontal"
                        HorizontalAlignment="Left"
                        LabelFontSize="10"
                        LabelText="{Binding SurvivalModel.GroupSneak.Name}"
                        FontSize="11"
                        IsReadOnly="True"
                        ModInt="{Binding SurvivalModel.GroupSneak}"
                        Text="{Binding SurvivalModel.GroupSneak.Total, Mode=OneWay}"
                        Hint="{Binding SurvivalModel.GroupSneak.Note}"
                        MinWidth="30"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
