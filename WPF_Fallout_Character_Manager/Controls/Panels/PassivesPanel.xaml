<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.Panels.PassivesPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" >
    <Grid>
        <GroupBox
            Header="Passives"
            Margin="5"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1">
            <ScrollViewer>
                <StackPanel Margin="0 5 5 5">
                    <Grid Margin="0 0 0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Style="{StaticResource FalloutDefaultLabel}"
                            FontSize="10"
                            VerticalAlignment="Center"
                            Content="{Binding SurvivalModel.PassiveSense.Name}"
                            ContentStringFormat="{}{0}:"/>
                        <controls:ChunkyCaretTextBox
                            Grid.Column="1"
                            MinWidth="30"
                            FontSize="11"
                            VerticalAlignment="Center"
                            IsReadOnly="True"
                            Text="{Binding SurvivalModel.PassiveSense.Total, Mode=OneWay}"/>
                    </Grid>
                    <Grid Margin="0 0 0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Style="{StaticResource FalloutDefaultLabel}"
                            FontSize="10"
                            VerticalAlignment="Center"
                            Content="{Binding SurvivalModel.PartyNerve.Name}"
                            ContentStringFormat="{}{0}:"/>
                        <controls:ChunkyCaretTextBox
                            Grid.Column="1"
                            MinWidth="30"
                            FontSize="11"
                            VerticalAlignment="Center"
                            IsReadOnly="True"
                            Text="{Binding SurvivalModel.PartyNerve.Total, Mode=OneWay}"/>
                    </Grid>
                    <Grid Margin="0 0 0 5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Column="0"
                            Style="{StaticResource FalloutDefaultLabel}"
                            FontSize="10"
                            VerticalAlignment="Center"
                            Content="{Binding SurvivalModel.GroupSneak.Name}"
                            ContentStringFormat="{}{0}:"/>
                        <controls:ChunkyCaretTextBox
                            Grid.Column="1"
                            MinWidth="30"
                            FontSize="11"
                            VerticalAlignment="Center"
                            IsReadOnly="True"
                            Text="{Binding SurvivalModel.GroupSneak.Total, Mode=OneWay}"/>
                    </Grid>
                    <Button
                        Content="OpenModalWindow"
                        Command="{Binding OpenModifierModalWindowCommand}"
                        CommandParameter="{Binding SurvivalModel.GroupSneak}"/>
                </StackPanel>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</UserControl>
