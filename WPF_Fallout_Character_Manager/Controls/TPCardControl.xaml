<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.TPCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:conv="clr-namespace:WPF_Fallout_Character_Manager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="180">

    <UserControl.Resources>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:VisibilitySwitcherConverter x:Key="VisibilitySwitcherConverter"/>
    </UserControl.Resources>

    <Border
        BorderBrush="{StaticResource FalloutGreen}"
        BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <ToggleButton
                x:Name="EditBtn"
                Grid.Column="1"
                Style="{StaticResource FalloutToggleButton}"
                BorderBrush="{StaticResource FalloutGreen}"
                BorderThickness="0"
                Margin="5 0 5 0"
                HorizontalAlignment="Stretch"
                HorizontalContentAlignment="Center"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                IsChecked="{Binding ShowDescription, Mode=TwoWay}">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    TextAlignment="Center"
                    Width="Auto"
                    FontSize="10"
                    TextWrapping="Wrap"
                    Text="{Binding Name}">
                    <TextBlock.Style>
                        <Style TargetType="TextBlock" BasedOn="{StaticResource FalloutDefaultText}">
                            <Setter Property="Foreground" Value="{StaticResource FalloutGreen}" />

                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsChecked, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                    <Setter Property="Foreground" Value="Black" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsPressed, RelativeSource={RelativeSource AncestorType=ToggleButton}}" Value="True">
                                    <Setter Property="Foreground" Value="Black" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBlock.Style>
                </TextBlock>
            </ToggleButton>

            <ScrollViewer
                Grid.Row="1"
                HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <Image
                        Visibility="{Binding ToggleDescriptionVisibility, Converter={StaticResource VisibilitySwitcherConverter}}"
                        Source="{Binding ImagePath}"
                        Width="180"
                        Height="150">
                    </Image>

                    <controls:EnhancedTextBox
                        Grid.Row="1"
                        CanOpenModal="False"
                        BorderBrush="{StaticResource FalloutGreen}"
                        BorderThickness="1 1 1 1"
                        HorizontalAlignment="Center"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        TextPadding="5"
                        Margin="5 0 5 0"
                        FontSize="9"
                        Width="Auto"
                        IsReadOnly="{Binding IsReadOnly}"
                        TextWrapping="Wrap"
                        Text="{Binding DescriptionToShow, Mode=OneWay}"
                        Visibility="{Binding ToggleDescriptionVisibility}">
                    </controls:EnhancedTextBox>
                </StackPanel>
            </ScrollViewer>

            <Border
                Grid.Row="2"
                Margin="5"
                BorderBrush="{StaticResource FalloutGreen}"
                BorderThickness="0 1 0 0">
                <StackPanel>
                    <StackPanel
                        Grid.Column="1"
                        Margin="5 10 5 5"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Visibility="Collapsed">
                        <CheckBox
                            Style="{StaticResource FalloutSkillCheckbox}"
                            Margin="0 2 0 0"
                            FontSize="18"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            IsChecked="{Binding IsWildWastelandToggled}"/>
                        <Label
                            Style="{StaticResource FalloutDefaultLabel}"
                            Content="Wild Wasteland"
                            FontSize="9"
                            VerticalAlignment="Top"/>
                    </StackPanel>

                    <StackPanel>
                        <controls:UpDownTextBoxControl x:Name="PerkStacks"
                            HorizontalAlignment="Center"
                            FontSize="11"
                            MinusButtonSlot="0"
                            PlusButtonSlot="2"
                            TextBoxSlot="1"
                            MinValue="1"
                            MaxValue="{Binding MaxStacks}"
                            Text="{Binding CurrentStacks}"
                            CanOpenModal="False"/>
                        <Label
                            Style="{StaticResource FalloutDefaultLabel}"
                            Visibility="{Binding ReachedMaxStacks, Converter={StaticResource BoolToVisibilityConverter}}"
                            FontSize="9"
                            Margin="0 -3 0 0"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            Content="(max.)"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
