<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.TPCardControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             xmlns:conv="clr-namespace:WPF_Fallout_Character_Manager.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="180">

    <UserControl.Resources>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
        <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <conv:VisibilitySwitcherConverter x:Key="VisibilitySwitcherConverter"/>
    </UserControl.Resources>

    <Border
        BorderBrush="{StaticResource FalloutGreen}"
        BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="150"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0"
                Style="{StaticResource FalloutDefaultText}"
                FontSize="12"
                Margin="5 0 5 0"
                VerticalAlignment="Center"
                HorizontalAlignment="Stretch"
                TextAlignment="Center"
                TextWrapping="Wrap"
                Text="{Binding Name}"/>

            <ScrollViewer
                Grid.Row="1"
                HorizontalScrollBarVisibility="Disabled">
                <StackPanel>
                    <ToggleButton
                        x:Name="ImageToggleBtn"
                        Grid.Column="1"
                        Style="{StaticResource FalloutToggleButton}"
                        Visibility="{Binding ToggleDescriptionVisibility, Converter={StaticResource VisibilitySwitcherConverter}}"
                        Background="Black"                        
                        IsChecked="{Binding ShowDescription, Mode=TwoWay}">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <Image
                                    Source="{Binding ImagePath}"
                                    Width="180"
                                    Height="150"/>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>

                    <ToggleButton
                        x:Name="TextToggleBtn"
                        Grid.Column="1"
                        Style="{StaticResource FalloutToggleButton}"
                        Visibility="{Binding ToggleDescriptionVisibility}"
                        Background="Black"                        
                        IsChecked="{Binding ShowDescription, Mode=TwoWay}">
                        <ToggleButton.Template>
                            <ControlTemplate TargetType="ToggleButton">
                                <controls:EnhancedTextBox
                                    Grid.Row="1"
                                    CanOpenModal="False"
                                    BorderBrush="{StaticResource FalloutGreen}"
                                    BorderThickness="1 1 1 1"
                                    HorizontalAlignment="Center"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    TextPadding="5"
                                    Margin="5 0 5 0"
                                    FontSize="9"
                                    Width="Auto"
                                    IsReadOnly="{Binding IsReadOnly}"
                                    TextWrapping="Wrap"
                                    Text="{Binding DescriptionToShow, Mode=OneWay}"
                                    PreviewMouseLeftButtonDown="EnhancedTextBox_PreviewMouseLeftButtonDown"
                                    PreviewMouseMove="DescriptionEnhancedTextBox_PreviewMouseMove"
                                    MouseLeave="EnhancedTextBox_MouseLeave">
                                </controls:EnhancedTextBox>
                            </ControlTemplate>
                        </ToggleButton.Template>
                    </ToggleButton>
                </StackPanel>
            </ScrollViewer>

            <Border
                Grid.Row="2"
                Margin="5"
                BorderBrush="{StaticResource FalloutGreen}"
                BorderThickness="0 1 0 0">
                <StackPanel>
                    <StackPanel
                        Margin="5 10 5 5"
                        Orientation="Horizontal"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Visibility="{Binding WildWastelandVisibility, RelativeSource={RelativeSource AncestorType=UserControl}}">
                        <CheckBox
                            Style="{StaticResource FalloutSkillCheckbox}"
                            Margin="0 2 0 0"
                            FontSize="18"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Right"
                            IsChecked="{Binding IsWildWastelandToggled}"/>
                        <Label
                            Style="{StaticResource FalloutDefaultLabel}"
                            Content="Wild Wasteland"
                            FontSize="9"
                            VerticalAlignment="Top"/>
                    </StackPanel>

                    <StackPanel
                        Orientation="Horizontal"
                        Margin="0 5 0 0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Visibility="{Binding WildWastelandVisibility, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource VisibilitySwitcherConverter}}">
                        <controls:UpDownTextBoxControl x:Name="PerkStacks"
                            HorizontalAlignment="Center"
                            FontSize="11"
                            MinusButtonSlot="0"
                            PlusButtonSlot="2"
                            TextBoxSlot="1"
                            MinValue="1"
                            MaxValue="{Binding MaxStacks}"
                            Text="{Binding CurrentStacks}"
                            CanOpenModal="False"/>
                        <Label
                            Style="{StaticResource FalloutDefaultLabel}"
                            Visibility="{Binding ReachedMaxStacks, Converter={StaticResource BoolToVisibilityConverter}}"
                            FontSize="9"
                            Margin="0 -3 0 0"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center"
                            Content="(max.)"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>
