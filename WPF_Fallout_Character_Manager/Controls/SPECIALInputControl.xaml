<UserControl x:Class="WPF_Fallout_Character_Manager.Controls.SPECIALInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel
            MinWidth="60">
            <Label
                x:Name="StatSymbolLabel"
                Style="{StaticResource FalloutDefaultLabel}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="24"
                Content="{Binding StatSymbol, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <Label
                x:Name="StatName"
                Style="{StaticResource FalloutDefaultLabel}"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="6"
                Opacity="0.7"
                Content="{Binding StatLabel, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
            <ContentControl
                Style="{StaticResource BracketBorderStyle}"
                BorderBrush="{StaticResource FalloutGreen}"
                BorderThickness="2"
                Background="Black"
                HorizontalContentAlignment="Center">
                <StackPanel>
                    <TextBox
                        x:Name="PrimaryStatTextBox"
                        Style="{StaticResource FalloutDefaultTextBox}"
                        Background="Black"
                        FontSize="24"
                        Padding="0 5 0 15"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Center"
                        Text="{Binding PrimaryStat, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    <ContentControl
                        Style="{StaticResource BracketBorderStyle}"
                        BorderBrush="{StaticResource FalloutGreen}"
                        BorderThickness="2"
                        Background="{StaticResource FalloutGreenBackground}"
                        HorizontalContentAlignment="Center"
                        Margin="0 0 0 -10">
                        <TextBox
                            x:Name="ModifierTextBox"
                            Style="{StaticResource FalloutDefaultTextBox}"
                            Background="{StaticResource FalloutGreenBackground}"
                            FontSize="20"
                            HorizontalContentAlignment="Center"
                            HorizontalAlignment="Center"
                            Text="{Binding StatModifier, RelativeSource={RelativeSource AncestorType=UserControl}, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                    </ContentControl>
                </StackPanel>
                
            </ContentControl>
        </StackPanel>
    </Grid>
</UserControl>
