<Window x:Class="WPF_Fallout_Character_Manager.Windows.ModifiersWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Windows"
        xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
        mc:Ignorable="d"
        Title="ModifiersWindow" Height="300" Width="500"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MinWidth="50"
        MinHeight="50"
        AllowsTransparency="true"
        Background="Black"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1 1 1 1"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding ModInt.Name, Mode=OneWay}"
               Grid.Column="0"
               Style="{StaticResource FalloutDefaultText}"
               FontSize="9"
               FontWeight="Bold"
               FontStyle="Italic"
               VerticalAlignment="Center"
               HorizontalAlignment="Left"
               Margin="10, 0, 0, 0"/>

            <Button x:Name="Close"
                Grid.Column="3"
                VerticalAlignment="Center"
                Content=" x "
                Style="{StaticResource FalloutTopBarButton}"
                Click="btnClose_Click"/>

        </Grid>
        <!-- -->

        <!-- Modifier Window -->
        <Border
            Grid.Row="1"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1 1 1 1">

            <ScrollViewer>
                <StackPanel Margin="5">
                    <controls:UpDownTextBoxWithLabelControl
                        Orientation="Horizontal"
                        LabelFontSize="10"
                        LabelText="Base Value"
                        FontSize="11"
                        Text="{Binding ModInt.BaseValue}"
                        ModInt="{Binding ModInt}"
                        IsReadOnly="{Binding ModInt.IsBaseValueReadOnly}"
                        CanOpenModal="False"
                        BorderThickness="0 0 0 1"
                        BorderBrush="{StaticResource FalloutGreen}"/>
                    <ListView ItemsSource="{Binding ModInt.Modifiers}"
                              HorizontalAlignment="Left"
                              Background="Black"
                              Height="200"
                              Width="480">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel
                                    Orientation="Horizontal">
                                    <controls:TextBoxWithLabelControl
                                        Margin="2"
                                        Width="135"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical"
                                        LabelFontSize="8"
                                        LabelText="Modifier"
                                        FontSize="9"
                                        CanOpenModal="false"
                                        Text="{Binding Name}"/>
                                    <controls:UpDownTextBoxWithLabelControl
                                        Margin="2"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical"
                                        LabelFontSize="8"
                                        LabelText="Value"
                                        FontSize="9"
                                        Text="{Binding Value}"/>
                                    <controls:TextBoxWithLabelControl
                                        Margin="2"
                                        Width="200"
                                        VerticalAlignment="Center"
                                        Orientation="Vertical"
                                        LabelFontSize="8"
                                        LabelText="Note"
                                        FontSize="9"
                                        CanOpenModal="False"
                                        Text="{Binding Note}"/>
                                    <StackPanel Orientation="Vertical">
                                        <Label
                                        Style="{StaticResource FalloutDefaultLabel}"
                                        FontSize="8"
                                        VerticalAlignment="Center"
                                        Content=""/>
                                        <Button
                                            Cursor="Hand"
                                            FontSize="9"
                                            Margin="0 0 0 5"
                                            Background="{StaticResource FalloutGreenBackground}"
                                            BorderThickness="0"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Command="{Binding DataContext.RemoveModifierCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border x:Name="PART_Border"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}">
                                                        <Rectangle x:Name="PART_OverlayRect"
                                                        Margin="5"
                                                        Width="18"
                                                        Height="18">
                                                            <Rectangle.Fill>
                                                                <SolidColorBrush Color="#23ba03"/>
                                                            </Rectangle.Fill>
                                                            <Rectangle.OpacityMask>
                                                                <ImageBrush ImageSource="/Resources/trashcan.png"/>
                                                            </Rectangle.OpacityMask>
                                                        </Rectangle>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsPressed" Value="True">
                                                            <Setter TargetName="PART_OverlayRect" Property="Fill" Value="Black"/>
                                                            <Setter TargetName="PART_Border" Property="Background" Value="{StaticResource FalloutGreen}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListView>
                    <Grid>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            Content="Add"
                            Margin="5 5 0 0"
                            Padding="5"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Command="{Binding DataContext.AddModifierCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
                        <Button
                            Style="{StaticResource FalloutButton}"
                            Content="Close"
                            Padding="5"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Bottom"
                            Click="btnClose_Click"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>

        </Border>
        <!-- -->
    </Grid>
</Window>
