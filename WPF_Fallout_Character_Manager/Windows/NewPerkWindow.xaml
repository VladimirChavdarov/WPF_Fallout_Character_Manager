<Window x:Class="WPF_Fallout_Character_Manager.Windows.NewPerkWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Windows"
        xmlns:control="clr-namespace:WPF_Fallout_Character_Manager.Controls"
        xmlns:conv="clr-namespace:WPF_Fallout_Character_Manager.Converters"
        mc:Ignorable="d"
        Title="NewPerkWindow" Height="410" Width="600"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MinWidth="50"
        MinHeight="50"
        AllowsTransparency="True"
        Background="Black"
        MouseDown="Window_MouseDown">

    <Window.Resources>
        <conv:InvertBoolConverter x:Key="InvertBoolConverter"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1 1 1 1"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="New Perk"
                Grid.Column="0"
                Style="{StaticResource FalloutDefaultText}"
                FontSize="9"
                FontWeight="Bold"
                FontStyle="Italic"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="10, 0, 0, 0"/>

            <Button x:Name="Close"
            Grid.Column="3"
            VerticalAlignment="Center"
            Content=" x "
            Style="{StaticResource FalloutTopBarButton}"
            Click="btnClose_Click"
            Command="{Binding DataContext.ResetNewTraitOrPerkCommand, RelativeSource={RelativeSource AncestorType=Window}}"/>
        </Grid>
        <!-- -->

        <Border
            Grid.Row="1"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1 1 1 1">
            <ScrollViewer>
                <Grid
                    Margin="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel>
                        <Button
                            Grid.Column="0"
                            Command="{Binding LoadImageCommand}"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Style="{StaticResource FalloutImageButton}"
                            Margin="5"
                            MaxWidth="230"
                            MaxHeight="260">
                            <Image
                                Source="{Binding NewPerk.ImagePath}"
                                Width="230"
                                Height="240"
                                Stretch="Uniform"/>
                        </Button>

                        <StackPanel
                            Margin="5 10 5 5"
                            Orientation="Horizontal"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Left">
                            <CheckBox
                                Style="{StaticResource FalloutSkillCheckbox}"
                                Margin="0 2 0 0"
                                FontSize="18"
                                VerticalAlignment="Top"
                                HorizontalAlignment="Right"
                                IsChecked="{Binding NewPerk.PickImageFromCardType, Mode=TwoWay, Converter={StaticResource InvertBoolConverter}}"/>
                            <Label
                                Style="{StaticResource FalloutDefaultLabel}"
                                Content="Disable Image Auto-selection"
                                FontSize="9"
                                VerticalAlignment="Top"/>
                        </StackPanel>

                        <Button
                            Grid.Row="0"
                            Style="{StaticResource FalloutButton}"
                            Content="Add to Catalogue"
                            Margin="10 50 10 10"
                            Padding="5"
                            Width="140"
                            FontSize="10"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Click="btnClose_Click"
                            Command="{Binding AddPerkToCatalogueCommand}"/>
                    </StackPanel>

                    <StackPanel
                        Grid.Column="1">
                        <control:TextBoxWithLabelControl
                            Margin="0 0 0 10"
                            Orientation="Vertical"
                            HorizontalContentAlignment="Left"
                            HorizontalAlignment="Left"
                            LabelFontSize="10"
                            LabelText="Name:"
                            FontSize="11"
                            IsReadOnly="False"
                            CanOpenModal="False"
                            Text="{Binding NewPerk.Name}"
                            MinWidth="300"/>
                        <StackPanel
                            Orientation="Horizontal">
                            <control:TextBoxWithLabelControl
                                Margin="0 3 0 10"
                                Orientation="Vertical"
                                HorizontalContentAlignment="Left"
                                HorizontalAlignment="Left"
                                LabelFontSize="10"
                                LabelText="Requirement:"
                                FontSize="11"
                                IsReadOnly="False"
                                CanOpenModal="False"
                                Text="{Binding NewPerk.Prerequisite}"
                                MinWidth="180"/>
                            <control:UpDownTextBoxWithLabelControl x:Name="MaxStacks"
                                Margin="20 0 0 0"
                                Orientation="Vertical"
                                HorizontalContentAlignment="Left"
                                HorizontalAlignment="Left"
                                LabelFontSize="10"
                                LabelText="Max Stacks"
                                FontSize="11"
                                MinValue="1"
                                MaxValue="999"
                                Text="{Binding NewPerk.MaxStacks}"
                                CanOpenModal="False"/>
                        </StackPanel>
                        <control:TextBoxWithLabelControl
                            Margin="0 0 0 10"
                            Orientation="Vertical"
                            HorizontalContentAlignment="Left"
                            HorizontalAlignment="Left"
                            LabelFontSize="10"
                            LabelText="Description:"
                            FontSize="11"
                            IsReadOnly="False"
                            CanOpenModal="False"
                            Text="{Binding NewPerk.Value}"
                            Width="300"
                            MinHeight="100"
                            TextWrapping="Wrap"/>
                        <control:TextBoxWithLabelControl
                            Margin="0 0 0 10"
                            Orientation="Vertical"
                            HorizontalContentAlignment="Left"
                            HorizontalAlignment="Left"
                            LabelFontSize="10"
                            LabelText="Repeat:"
                            FontSize="11"
                            IsReadOnly="False"
                            CanOpenModal="False"
                            Text="{Binding NewPerk.ExtraDescription}"
                            Width="300"
                            MinHeight="100"
                            TextWrapping="Wrap"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
