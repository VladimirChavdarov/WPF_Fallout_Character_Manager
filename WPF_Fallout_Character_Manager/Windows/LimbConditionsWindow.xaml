<Window x:Class="WPF_Fallout_Character_Manager.Windows.LimbConditionsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Fallout_Character_Manager.Windows"
        mc:Ignorable="d"
        Title="LimbConditionsWindow" Height="300" Width="500"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MinWidth="50"
        MinHeight="50"
        AllowsTransparency="True"
        Background="Black"
        MouseDown="Window_MouseDown">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1 1 1 1"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="{Binding CurrentLimbName, Mode=OneWay}"
                Grid.Column="0"
                Style="{StaticResource FalloutDefaultText}"
                FontSize="9"
                FontWeight="Bold"
                FontStyle="Italic"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="10, 0, 0, 0"/>

            <Button x:Name="Close"
                Grid.Column="3"
                VerticalAlignment="Center"
                Content=" x "
                Style="{StaticResource FalloutTopBarButton}"
                Click="btnClose_Click"/>
        </Grid>
        <!-- -->

        <Border
            Grid.Row="1"
            Background="Black"
            BorderBrush="#23ba03"
            BorderThickness="1 1 1 1">
            <ScrollViewer>
                <StackPanel Margin="5">

                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
