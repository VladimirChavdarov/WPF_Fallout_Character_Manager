<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPF_Fallout_Character_Manager">

    <Style x:Key="FalloutTabControl" TargetType="{x:Type TabControl}">
        <Setter Property="SnapsToDevicePixels"
          Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Grid KeyboardNavigation.TabNavigation="Local">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        
                        <TabPanel x:Name="HeaderPanel"
                            Grid.Row="0"
                            HorizontalAlignment="Center"
                            Panel.ZIndex="0"
                            Margin="0"
                            IsItemsHost="True"
                            KeyboardNavigation.TabIndex="1"
                            Background="Black"/>
                        <Border x:Name="Border"
                            Grid.Row="1"
                            BorderThickness="0 2 0 0"
                            KeyboardNavigation.TabNavigation="Local"
                            KeyboardNavigation.DirectionalNavigation="Contained"
                            KeyboardNavigation.TabIndex="2"
                            Background="Black"
                            BorderBrush="{StaticResource FalloutGreen}">
                            <ContentPresenter x:Name="PART_SelectedContentHost"
                                Margin="0"
                                ContentSource="SelectedContent" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="FalloutEquippableTabControl" TargetType="{x:Type TabControl}">
        <Setter Property="SnapsToDevicePixels"
      Value="True" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Grid KeyboardNavigation.TabNavigation="Local">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TabPanel x:Name="HeaderPanel"
                        Grid.Row="0"
                        HorizontalAlignment="Left"
                        Panel.ZIndex="0"
                        Margin="0"
                        IsItemsHost="True"
                        KeyboardNavigation.TabIndex="1"
                        Background="Black"/>
                        <Border x:Name="Border"
                        Grid.Row="1"
                        BorderThickness="0 1 0 0"
                        KeyboardNavigation.TabNavigation="Local"
                        KeyboardNavigation.DirectionalNavigation="Contained"
                        KeyboardNavigation.TabIndex="2"
                        Background="Black"
                        BorderBrush="{StaticResource FalloutGreen}">
                        <ContentPresenter x:Name="PART_SelectedContentHost"
                            Margin="0"
                            ContentSource="SelectedContent" />
                        </Border>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="{x:Type TabItem}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabItem}">
                    <Grid x:Name="Root">
                        <Border x:Name="ItemBorder"
                            Margin="0,0,0,0"
                            BorderThickness="0"
                            BorderBrush="{StaticResource FalloutGreen}"
                            Background="Black">
                            <ContentPresenter x:Name="ContentSite"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                ContentSource="Header"
                                Margin="12,6,12,6"
                                RecognizesAccessKey="True"
                                TextElement.Foreground="{StaticResource FalloutGreen}"
                                TextElement.FontWeight="Bold"
                                TextElement.FontFamily="{StaticResource JH_Fallout}"/>
                        </Border>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource FalloutGreenBackground}"/>
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="ItemBorder" Property="Background" Value="{StaticResource FalloutGreen}"/>
                            <Setter TargetName="ContentSite" Property="TextElement.Foreground" Value="Black"/>
                        </Trigger>
                        
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>