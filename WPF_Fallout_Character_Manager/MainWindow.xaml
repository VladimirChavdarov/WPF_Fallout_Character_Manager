<Window x:Class="WPF_Fallout_Character_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Fallout_Character_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Width="1320" Height="760"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MinWidth="205"
        MinHeight="205"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="true"
        Background="Transparent"
        
        MouseDown="Window_MouseDown">

    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
        Background="Black"
        BorderBrush="#23ba03"
        BorderThickness="1"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Pip-boy 2025 RobCo."
                       Grid.Column="0"
                       Style="{StaticResource FalloutDefaultText}"
                       FontSize="9"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10, 0, 0, 0"/>

            <Button x:Name="Minimize"
                Grid.Column="1"
                Style="{StaticResource FalloutMinimizeButtonStyle}"
                Click="btnMinimize_Click"/>

            <Button x:Name="Fullscreen"
                Grid.Column="2"
                Style="{StaticResource FalloutFullscreenButtonStyle}"
                Click="btnFullscreen_Click"/>

            <Button x:Name="Close"
                Grid.Column="3"
                Style="{StaticResource FalloutCloseButtonStyle}"
                Click="btnClose_Click"/>

        </Grid>

        <Border Grid.Row="1"
                Background="Black"
                BorderBrush="#23ba03"
                BorderThickness="1">
            <ScrollViewer
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="360"/>
                        <RowDefinition Height="360"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <ScrollViewer>
                        <StackPanel
                            Grid.Row="0"
                            Grid.Column="0">
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                            <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                        </StackPanel>
                    </ScrollViewer>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="3">
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>

</Window>
