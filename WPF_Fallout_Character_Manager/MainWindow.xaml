<Window x:Class="WPF_Fallout_Character_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Fallout_Character_Manager"
        mc:Ignorable="d"
        Title="MainWindow" Width="1280" Height="720"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MinWidth="205"
        MinHeight="205"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="true"
        Background="Transparent"
        
        MouseDown="Window_MouseDown">

    
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
        Background="Black"
        BorderBrush="#23ba03"
        BorderThickness="1"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Pip-boy 2025 RobCo."
                       Grid.Column="0"
                       Foreground="#23ba03"
                       FontSize="9"
                       FontFamily="{StaticResource JH_Fallout}"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10, 0, 0, 0"/>

            <Button x:Name="btnMinimize"
                    Grid.Column="1"
                    FontSize="12"
                    FontFamily="{StaticResource Monofonto}"
                    Cursor="Hand"
                    Click="btnMinimize_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Content" Value=" - "/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#23ba03"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Content" Value="[-]"/>

                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="18" Height="18"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnFullscreen"
                Grid.Column="2"
                FontSize="12"
                FontFamily="{StaticResource Monofonto}"
                Cursor="Hand"
                Click="btnFullscreen_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Content" Value=" o "/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#23ba03"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Content" Value="[o]"/>

                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">

                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="18" Height="18"
                    Background="{TemplateBinding Background}">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                  VerticalAlignment="Center"
                                  HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Button x:Name="btnClose"
                    Grid.Column="3"
                    FontSize="12"
                    FontFamily="{StaticResource Monofonto}"
                    Cursor="Hand"
                    Click="btnClose_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Content" Value=" x "/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#23ba03"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Content" Value="[x]"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="18" Height="18"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter Content="{TemplateBinding Content}"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <Border Grid.Row="1"
                Background="Black"
                BorderBrush="#23ba03"
                BorderThickness="1">
            <ScrollViewer
                VerticalScrollBarVisibility="Auto"
                HorizontalScrollBarVisibility="Auto">

                <Grid>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="360"/>
                        <RowDefinition Height="360"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel
                        Grid.Row="0"
                        Grid.Column="0">
                        <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Red"/>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="3">
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                        <TextBox Height="30" Width="200" Margin="10" Background="Blue"/>
                    </StackPanel>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>

</Window>
