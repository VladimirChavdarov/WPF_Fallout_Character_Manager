<Window x:Class="WPF_Fallout_Character_Manager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Fallout_Character_Manager"
        xmlns:controls="clr-namespace:WPF_Fallout_Character_Manager.Controls"
        xmlns:panels="clr-namespace:WPF_Fallout_Character_Manager.Controls.Panels"
        mc:Ignorable="d"
        Title="MainWindow" Width="1365" Height="825"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        MinWidth="205"
        MinHeight="205"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="true"
        Background="Black"
        
        MouseDown="Window_MouseDown">



    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <!-- Top Bar -->
        <Border Grid.Row="0"
        Background="Black"
        BorderBrush="#23ba03"
        BorderThickness="1 1 1 1"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
                <ColumnDefinition Width="18"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Pip-boy 2025 RobCo."
                       Grid.Column="0"
                       Style="{StaticResource FalloutDefaultText}"
                       FontSize="9"
                       FontWeight="Bold"
                       FontStyle="Italic"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Left"
                       Margin="10, 0, 0, 0"/>

            <Button x:Name="Minimize"
                Grid.Column="1"
                Content=" - "
                Style="{StaticResource FalloutTopBarButton}"
                Click="btnMinimize_Click"/>

            <Button x:Name="Fullscreen"
                Grid.Column="2"
                Content=" o "
                Style="{StaticResource FalloutTopBarButton}"
                Click="btnFullscreen_Click"/>

            <Button x:Name="Close"
                Grid.Column="3"
                Content=" x "
                Style="{StaticResource FalloutTopBarButton}"
                Click="btnClose_Click"/>

        </Grid>
        <!-- -->

        <!-- Main Window -->
        <Border Grid.Row="1"
                Background="Black"
                BorderBrush="#23ba03"
                BorderThickness="1 1 1 1">

            <ScrollViewer>
                <TabControl>
                    
                    <!-- Character Tab -->
                    <TabItem Header="Character">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="270"/>
                                <ColumnDefinition Width="562"/>
                                <ColumnDefinition Width="260"/>
                                <ColumnDefinition Width="260"/>
                            </Grid.ColumnDefinitions>

                            <!-- First Column (Small Bio, Survival Params., Passives) -->
                            <Grid
                                Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="420"/>
                                    <RowDefinition Height="200"/>
                                    <RowDefinition Height="140"/>
                                </Grid.RowDefinitions>

                                <!-- Small Bio -->
                                <panels:SmallBioPanel
                                    Grid.Row="0"
                                    DataContext="{Binding BioViewModel}"/>
                                <!-- -->

                                <!-- Survival -->
                                <panels:SurvivalPanel
                                    Grid.Row="1"
                                    DataContext="{Binding SurvivalViewModel}"/>
                                <!-- -->

                                <!-- Passives -->
                                <panels:PassivesPanel
                                    Grid.Row="2"
                                    DataContext="{Binding SurvivalViewModel}"/>
                                <!-- -->
                            </Grid>
                            <!-- -->

                            <!-- Second Column (SPECIAL, Equipped Items) -->
                            <Grid
                                Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="456"/>
                                    <RowDefinition Height="304"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>

                                <!-- SPECIAL -->
                                <panels:SPECIALPanel
                                    Grid.Row="0"
                                    DataContext="{Binding CombatViewModel}"/>
                                <!-- -->

                                <!-- Equipped Items -->
                                <GroupBox
                                    Header="Equipped Items"
                                    Grid.Row="1"
                                    Margin="5"
                                    Background="Black"
                                    BorderBrush="#23ba03"
                                    BorderThickness="1">

                                </GroupBox>
                                <!-- -->
                            </Grid>
                            <!-- -->

                            <!-- Third Column (Skills) -->
                            <Grid
                                Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="760"/>
                                </Grid.RowDefinitions>

                                <!-- Skills -->
                                <panels:SkillsPanel
                                    Grid.Row="0"
                                    DataContext="{Binding SkillViewModel}"/>
                                <!-- -->
                            </Grid>
                            <!-- -->

                            <!-- Fourth Column (Conditions) -->
                            <Grid
                                Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="340"/>
                                    <RowDefinition Height="420"/>
                                </Grid.RowDefinitions>

                                <!-- Limb Conditions -->
                                <panels:LimbConditionsPanel
                                    Grid.Row="0"
                                    DataContext="{Binding LimbConditionsViewModel}"/>
                                <!-- -->

                                <!-- Limb Conditions -->
                                <panels:ConditionsPanel
                                    Grid.Row="1"
                                    DataContext="{Binding ConditionsViewModel}"/>
                                <!-- -->
                            </Grid>
                            <!-- -->

                        </Grid>
                    </TabItem>
                    <!-- -->
                    
                    <!-- Inventory Tab -->
                    <TabItem Header="Inventory">
                        <TextBlock>
                            Placeholder
                        </TextBlock>
                    </TabItem>
                    <!-- -->

                    <!-- Perks Tab -->
                    <TabItem Header="Perks">
                        <TextBlock>
                            Placeholder
                        </TextBlock>
                    </TabItem>
                    <!-- -->

                    <!-- Perks Tab -->
                    <TabItem Header="Data">
                        <TextBlock>
                            Placeholder
                        </TextBlock>
                    </TabItem>
                    <!-- -->

                    <TabItem Header="   "
                             Focusable="False"
                             IsHitTestVisible="False"
                             FontFamily="{StaticResource Monofonto}">
                        <TextBlock>
                            Placeholder
                        </TextBlock>
                    </TabItem>

                    <!-- Perks Tab -->
                    <TabItem Header="Load"
                             PreviewMouseDown="RunFunctionTab_LoadCharacter">
                    </TabItem>
                    <!-- -->

                    <!-- Perks Tab -->
                    <TabItem Header="Save"
                             PreviewMouseDown="RunFunctionTab_SaveCharacter">
                    </TabItem>
                    <!-- -->
                </TabControl>
                
            </ScrollViewer>
        </Border>
        <!-- -->
    </Grid>

</Window>
